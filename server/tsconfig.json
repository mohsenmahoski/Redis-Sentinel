{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "src",
    "baseUrl": "src",
    "typeRoots" : ["./src/types", "./node_modules/@types"],
  }
}
